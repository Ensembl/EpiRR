{
    "schema": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "IHEC Data Hub Experiment Chromatin Accessiblity schema 2.0",
        "description": "IHEC Data Hub Experiment Chromatin Accessiblity schema",
        "type": "object",
        "properties": {
            "reference_registry_id": {
                "type": "string",
                "description": "The IHEC EpiRR ID for this dataset, only for IHEC Reference Epigenome datasets. Omit if empty."
            },
            "qc_flags": {
                "type": "string",
                "description": "Any quanlity control observations can be noted here. Omit if empty"
            },
            "experiment_type": {
                "const": "chromatin accessibility",
                "description": "Constant: chromatin accessibility"
            },
            "experiment_ontology_curie": {
                "type": "string",
                "pattern": "^obi:[0-9]{7}$",
                "description": "(Ontology: OBI). Links to experiment ontology information."
            },
            "library_strategy": {
                "type": "string",
                "enum": [
                    "dnase-hypersensitivity",
                    "atac-seq",
                    "nome-Seq"
                ],
                "description": "One of: dnase-hypersensitivity, atac-seq or nome-Seq"
            },
            "molecule": {
                "const": "genomic dna",
                "description": "Constant: Genomic DNA"
            },
            "molecule_ontology_curie": {
                "type": "string",
                "pattern": "^so:[0-9]{7}$",
                "description": "(Ontology: SO). Links to molecule ontology information."
            },
            "extraction_protocol": {
                "type": "string",
                "description": "The protocol used to isolate the extract material."
            },
            "dnase_protocol": {
                "type": "string",
                "description": "The protocol used for DNAse treatment."
            }
        },
        "required": [
            "library_strategy",
            "molecule",
            "molecule_ontology_curie"
        ],
        "anyOf": [
            {
                "required": [
                    "experiment_ontology_curie"
                ]
            },
            {
                "required": [
                    "experiment_type"
                ]
            }
        ]
    },
    "object": {
        "experiment_type": "chromatin accessibility",
        "molecule": "genomic dna",
        "molecule_ontology_uri": "http://www.sequenceontology.org/browser/current_release/term/so:0000991",
        "molecule_ontology_curie": "so:0000991",
        "library_strategy": "atac-seq",
        "experiment_ontology_uri": "http://purl.obolibrary.org/obo/obi_0002039",
        "experiment_ontology_curie": "obi:0002039"
    }
}
